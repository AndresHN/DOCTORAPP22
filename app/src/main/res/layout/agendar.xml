<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/idDNI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="DNI" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre" />

    <EditText
        android:id="@+id/edadid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Edad" />

    <EditText
        android:id="@+id/fechaid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Fecha de consulta" />

    <EditText
        android:id="@+id/horaid "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Hora de consulta" />

    <EditText
        android:id="@+id/telid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Telefono" />

    <TextView
        android:id="@+id/hospid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hospital"
        android:textColor="#050505"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/listhosp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/hospid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Especialidad"
        android:textColor="#050505"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/listesp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/sintid"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sintomas"
        android:textSize="24sp" />

    <Button
        android:id="@+id/buttonguardar"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Guardar" />
</LinearLayout>